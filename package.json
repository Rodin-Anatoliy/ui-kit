{
  "name": "ui-kit",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build:prod": "webpack --mode production",
    "build:js": "rm -rf dist && babel src/lib --out-dir dist --extensions \".ts,.tsx\" --source-maps inline --copy-files",
    "build:types": "tsc src/lib/**/**/*.ts src/lib/**/**/*.tsx --declaration --emitDeclarationOnly --jsx react --outDir dist/components --allowSyntheticDefaultImports --isolatedModules --allowJs && tsc src/lib/**/*.ts --declaration --emitDeclarationOnly --jsx react --outDir dist --allowSyntheticDefaultImports --isolatedModules --allowJs && tsc src/lib/index.ts --declaration --emitDeclarationOnly --jsx react --outDir dist --allowSyntheticDefaultImports --isolatedModules",
    "build:css": "npm run build:prod && cp build/*.css dist/main.css && rm -rf build",
    "build": "npm run build:js && npm run build:types && npm run build:css",
    "postinstall": "npm run build",
    "lint:write": "eslint --debug src/ && git add .",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@linaria/babel-preset": "^3.0.0-beta.13",
    "@linaria/webpack-loader": "^3.0.0-beta.13",
    "@sentry/webpack-plugin": "^1.18.3",
    "@types/mini-css-extract-plugin": "^2.3.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.3.0",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^38.0.1",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.4",
    "mini-css-extract-plugin": "^2.3.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3",
    "webpack": "^5.54.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.3.0"
  },
  "dependencies": {
    "@callstack/react-theme-provider": "^3.0.7",
    "@linaria/core": "^3.0.0-beta.13",
    "@linaria/react": "^3.0.0-beta.13",
    "@linaria/shaker": "^3.0.0-beta.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
